@model TestPortal.Models.PageObject
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin_EN.cshtml";
}
<div class="card card-primary">
    <div class="card-header ">
        <h4 class="col-md-8">Login</h4>
        <span class="col-md-2">
            <a href="@Url.Action("index", "Home")"><img src="~/Content/Images/United_Kingdom-128.png" style="width:30px; height:20px;" /></a>
        </span>
        <span class="col-md-2">
            <a href="@Url.Action("index", "Home_IL")"><img src="~/Content/Images/Israel-128.png" style="width:30px; height:20px;" /></a>
        </span>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("DoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "needs-validation", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="email">Email</label>
                @Html.TextBoxFor(x => x.User.Email, new { @id = "email", @type = "email", @class = "form-control", @tabindex = "1", @required = "required", autofocus = "autofocus" })
                @*<input id="email" type="email" class="form-control" name="email" tabindex="1" required autofocus>*@
                <div class="invalid-feedback">
                    Please fill in your email
                </div>
            </div>
            <div class="form-group">
                <div class="d-block">
                    <label for="password" class="control-label">Password</label>
                </div>
                @Html.TextBoxFor(x => x.User.Password, new { @id = "password", @type = "password", @class = "form-control", @tabindex = "2", @required = "required" })
                @*<input id="password" type="password" class="form-control" name="password" tabindex="2" required>*@
                <div class="invalid-feedback">
                    please fill in your password
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                    Login
                </button>
            </div>
        }
    </div>
</div>

